<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_foodicon" android:id="@+id/icon"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/labelName"
            android:layout_marginEnd="4dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/labelName"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:textSize="18dp"
              android:text="Name"
              android:textStyle="bold"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toEndOf="@+id/icon"
              app:layout_constraintEnd_toEndOf="parent" android:textColor="#000000" android:layout_marginStart="2dp"
              android:layout_marginEnd="8dp" android:fontFamily="@font/poppins" android:paddingStart="2dp"
              android:paddingEnd="2dp">
    </TextView>
    <TextView
            android:id="@+id/labelDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Description"
            app:layout_constraintTop_toBottomOf="@id/labelName"
            app:layout_constraintStart_toStartOf="@id/labelName"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp" android:fontFamily="@font/poppins">
    </TextView>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/labelDescription" android:id="@+id/layout1"
            app:layout_constraintStart_toStartOf="@+id/labelName" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:descendantFocusability="blocksDescendants" android:clickable="true">
        <EditText
                android:id="@+id/servingDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Serving Desc"
                android:fontFamily="@font/poppins"
                android:layout_marginStart="14dp"
                android:singleLine="false" android:inputType="textMultiLine"
                android:background="@android:color/transparent" android:textSize="14sp"
                android:textColor="#777777" android:layout_marginEnd="8dp"
                android:layout_weight="1" android:clickable="true" android:focusableInTouchMode="false"/>
        <TextView
                android:id="@+id/caloriesNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:fontFamily="@font/poppins"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="2dp"/>
        <TextView
                android:id="@+id/lblCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calories"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/poppins_semibold"
        />
    </LinearLayout>
    <RelativeLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layout1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/relativeLayout2">

        <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                android:id="@+id/expandableLayout_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:orientation="vertical"
                app:ael_duration="100"
                app:ael_expanded="false"
                app:ael_interpolator="accelerate"
                app:ael_orientation="vertical" android:layout_alignParentTop="true"
        >

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/labels"
            >


                <TextView
                        android:id="@+id/lblCarbs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Carbs"
                        app:layout_constraintEnd_toStartOf="@id/guidelineLeft"
                        android:fontFamily="@font/poppins" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                        android:id="@+id/carbsNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        app:layout_constraintBaseline_toBaselineOf="@+id/lblCarbs"
                        app:layout_constraintLeft_toRightOf="@id/guidelineLeft" android:fontFamily="@font/poppins"/>

                <TextView
                        android:id="@+id/lblProtein"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Protein"
                        app:layout_constraintBaseline_toBaselineOf="@+id/lblCarbs"
                        app:layout_constraintEnd_toStartOf="@id/guidelineMiddle" android:fontFamily="@font/poppins"/>

                <TextView
                        android:id="@+id/proteinNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        app:layout_constraintBaseline_toBaselineOf="@+id/lblProtein"
                        app:layout_constraintLeft_toRightOf="@id/guidelineMiddle" android:fontFamily="@font/poppins"/>

                <TextView
                        android:id="@+id/lblFat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Fat"
                        app:layout_constraintTop_toBottomOf="@id/lblCarbs"
                        app:layout_constraintEnd_toStartOf="@id/guidelineLeft" android:fontFamily="@font/poppins"/>

                <TextView
                        android:id="@+id/fatNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        app:layout_constraintBaseline_toBaselineOf="@+id/lblFat"
                        app:layout_constraintLeft_toRightOf="@id/guidelineLeft" android:fontFamily="@font/poppins"/>

                <TextView
                        android:id="@+id/lblSodium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sodium"
                        app:layout_constraintBaseline_toBaselineOf="@id/lblProtein"
                        app:layout_constraintEnd_toStartOf="@id/guidelineRight" android:fontFamily="@font/poppins"/>

                <TextView
                        android:id="@+id/sodiumNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        app:layout_constraintBaseline_toBaselineOf="@+id/proteinNumber"
                        app:layout_constraintLeft_toRightOf="@id/guidelineRight" android:fontFamily="@font/poppins"/>

                <androidx.constraintlayout.widget.Guideline
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/guidelineLeft"
                        app:layout_constraintGuide_percent="0.22"/>
                <androidx.constraintlayout.widget.Guideline
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/guidelineMiddle"
                        app:layout_constraintGuide_percent="0.50"/>
                <androidx.constraintlayout.widget.Guideline
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/guidelineRight"
                        app:layout_constraintGuide_percent="0.78"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/labels"
                    android:orientation="horizontal" android:id="@+id/warningRecycler" android:layout_marginTop="0dp"/>


        </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

    </RelativeLayout>

    <Button
            android:id="@+id/expandableButton_result"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:drawableRight="@android:drawable/arrow_down_float"
            android:paddingRight="10dp"
            android:fontFamily="@font/poppins"
            android:textColor="#FFFFFF" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:drawableTint="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"/>

</androidx.constraintlayout.widget.ConstraintLayout>